<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC
  "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Scooter Framework Application</display-name>

  <!-- Define servlet-mapped and path-mapped example filters -->
  
  <filter>
    <filter-name>ScooterFilter</filter-name>
    <filter-class>com.scooterframework.web.controller.ScooterRequestFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  
  <filter>
    <filter-name>sitemesh</filter-name>
    <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>ScooterFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
    <filter-name>sitemesh</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <listener>
    <listener-class>
      com.scooterframework.admin.WebApplicationStartListener
    </listener-class>
  </listener>
  
  <servlet>
    <servlet-name>scooter</servlet-name>
    <servlet-class>com.scooterframework.web.controller.MainActionServlet</servlet-class>
    <init-param>
      <param-name>processor</param-name>
      <param-value>com.scooterframework.web.controller.RestfulRequestProcessor</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>scooter</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/static/*</url-pattern>
  </servlet-mapping>

  <!-- The Usual Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <error-page>
    <error-code>404</error-code>
    <location>/static/html/404.html</location>
  </error-page>
  
  <error-page>
    <error-code>500</error-code>
    <location>/static/html/500.html</location>
  </error-page>

</web-app>